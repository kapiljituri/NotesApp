    <PreferenceCategory
        android:title="About">

        <Preference
            android:key="setting_about"
            android:title="About"
            android:summary="About Notes App"/>

        <Preference
            android:key="setting_more_apps"
            android:title="More Apps"
            android:summary="Check my other apps on Play Store"/>

        </PreferenceCategory>
</PreferenceScreen>
